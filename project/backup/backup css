/* Stili per dispositivi fino a 768px (mobile) */
@media only screen and (max-width: 768px) {
    body {
        font-size: 16px; /* Esempio di adattamento della dimensione del testo */
    }

    nav ul {
        padding: 0;
    }

    nav ul li {
        display: block;
        margin: 10px 0;
    }

    footer {
        position: static;
    }
}

/* Stili per dispositivi tra 769px e 1024px (tablet) */
@media only screen and (min-width: 769px) and (max-width: 1024px) {
    body {
        font-size: 18px; /* Esempio di adattamento della dimensione del testo */
    }
}

/* Stili per dispositivi oltre i 1024px (PC) */
@media only screen and (min-width: 1025px) {
    body {
        font-size: 20px; /* Esempio di adattamento della dimensione del testo */
    }
}


